<% provide(:title, "Captains") %>

<div class="container">
    <h1>Captains</h1>
    <ul>
        <% @caps.each do |cap| %>
            <li style= "font-size: x-large; font-weight: bold"><%= cap.name %></li>
            <div style= "font-size: large">
                <%= cap.name + "'s players:" %>
            </div>
            <ul>
                <% cap.players.each do |player| %>
                    <li><%= player.name %></li>
                <% end %>
            </ul>
        <% end %>
    </ul>
</div>

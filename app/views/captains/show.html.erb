<% provide(:title, "Captains") %>

<div class="profile-header container">
    <h1><%= @captain.name %></h1>
</div>

<div class="container">
    <ul>
         <h3>Roster:<h3>
         <ul>
            <% @captain.players.each do |player| %>
                <li>
                    <div class="player-card">
                        <%= player.name %>
                        <div class="edit-buttons">
                            <button style="margin-right: 15px">Edit</button>
                            <button>Delete</button>
                        </div>
                    </div>
                </li>
            <% end %>
        </ul>
    </ul>
</div>

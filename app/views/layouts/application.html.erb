        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Home", "/" %></li>
            <li><%= link_to "Help", "/help" %></li>
            <li><%= link_to "About", "/about" %></li>
          </ul>
        </nav>
